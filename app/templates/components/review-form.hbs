
{{#if addNewReview}}
<div class="well review-well">
<h2>New Review</h2>
<div>
  <form>
    <div class="form-group">
      <label for="score">Score (0-5)</label>
      {{input type="number" value=score id="score" min="0" max="10" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="comments">Review</label>
      {{textarea rows="3" class="form-control" value=comments id="comments"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
    <button class="btn btn-success" {{action 'saveReview' neighborhood}}>Save</button>
  </form>
</div>
</div>
{{else}}
  <button class="btn btn-success" {{action 'reviewFormShow'}}>Add Review</button>
{{/if}}
